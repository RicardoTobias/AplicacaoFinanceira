{% extends 'layout.html.twig' %}

{% block content %}
    <div class="col-md-12 no-padding">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <h4><i class="fa fa-list" aria-hidden="true"></i> Administração de usuários</h4>
                    </div>
                    <div class="col-xs-6 text-right">
                        <a href="{{ route('users.new') }}" class="btn btn-primary">
                            <i class="fa fa-plus" aria-hidden="true"></i> Criar novo
                        </a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Email</th>
                            <th><center><em class="fa fa-cog"></em></center></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.first_name ~ ' ' ~ user.last_name }}</td>
                                <td>{{ user.email }}</td>
                                <td><center>
                                    <a class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="Editar" href="{{ route('users.edit', {'id': user.id}) }}">
                                        <span class="fa fa-pencil"></span>
                                    </a>
                                    <a class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Excluir" href="{{ route('users.show', {'id': user.id}) }}">
                                        <span class="fa fa-trash"></span>
                                    </a>
                                </center></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}