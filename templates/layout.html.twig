<!doctype html>
<html>
    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>Admin - Dashboard</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- CSS -->
        <link rel="stylesheet" href="/assets/css/bootstrap/bootstrap.min.css">
        <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
        <link rel="stylesheet" href="/assets/css/financialStyles.css">

        <script src="assets/js/modernizr-2.8.3-respond-1.4.2.min.js"></script>

    </head>
    <body>

        <div class="wrapper">

            <div class="sidebar">
                <nav class="navbar navbar-default" role="navigation">

                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-mobile">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <a class="navbar-brand" href="javascript:void(0);">Financeiro PHP</a>

                    </div><!-- .navbar-header -->
                </nav><!-- .navbar .navbar-default -->

                {% if Auth.check() %}
                    <div class="navbar-default sidebar collapse navbar-collapse" id="navbar-mobile" role="navigation">
                        <div class="sidebar-nav">
                            <ul class="nav" id="side-menu">
                                <li class="sidebar-search">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Procurar...">
                                        <span class="input-group-btn">
                                            <button class="btn btn-default" type="button">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                    <!-- /input-group -->
                                </li>
                                <li>
                                    <a href="{{ route('category-costs.list') }}"><i class="fa fa-shopping-bag" aria-hidden="true"></i> Categoria de Custo</a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)" data-toggle="collapse" data-target="#contas">
                                        <i class="fa fa-file" aria-hidden="true"></i> Contas <span class="fa fa-caret-down"></span>
                                    </a>
                                    <ul class="nav nav-second-level collapse" id="contas">
                                        <li>
                                            <a href="{{ route('bill-pays.list') }}"><i class="fa fa-barcode" aria-hidden="true"></i> Contas a pagar</a>
                                        </li>
                                        <li>
                                            <a href="{{ route('bill-receives.list') }}"><i class="fa fa-handshake-o" aria-hidden="true"></i> Contas a receber</a>
                                        </li>
                                    </ul>
                                </li>

                                <li>
                                    <a href="{{ route('statements.list') }}"> <i class="fa fa-file-text-o" aria-hidden="true"></i> Extrato</a>
                                </li>

                                <li>
                                    <a href="{{ route('charts.list') }}"><i class="fa fa-pie-chart" aria-hidden="true"></i> Gráfico de Gastos</a>
                                </li>

                                <li>
                                    <a href="{{ route('users.list') }}"><i class="fa fa-user" aria-hidden="true"></i> Usuário</a>
                                </li>
                                
                                <li class="bg-danger">
                                    <a class="text-danger" href="{{ route('auth.logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> Sair do sistema</a>
                                </li>

                            </ul>
                        </div>
                        <!-- /.sidebar-collapse -->

                    </div>
                    <!-- /.navbar-static-side -->
                {% endif %}

            </div><!-- .sidebar -->

            <div class="content">

                <div class="main">
                    {% block content %}{% endblock %}           
                </div>

                <div class="footer">
                    <div class="navbar navbar-default">
                        <p class="navbar-text">© 2017 - ricardosantostobias@yahoo.com.br </p>
                    </div>              
                </div>

            </div><!-- .content -->

        </div><!-- .wrapper -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

        <script src="/assets/js/bootstrap.min.js"></script>

        <script src="/assets/js/main.min.js"></script>
        
        {% block scripts %}{% endblock %}

    </body>
</html>
