
{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            
            <center>
                <h2 class="login">
                    RTW System <br>
                    <small class="login">Sistema de organização financeira</small>
                </h2>
            </center>
            
            <div class="card card-container">
                <form method="post" class="form-signin" action="{{ route('auth.login') }}">
                    <div class="form-group">
                        <label class="control-label">E-mail</label>
                        <input class="form-control" id="inputEmail" type="text" placeholder="E-mail" name="email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Senha</label>
                        <input class="form-control" id="inputPassword" type="password" placeholder="Senha" name="password" required>
                    </div>
                    <button class="btn btn-lg btn-success btn-block btn-signin" type="submit">Entrar no sistema</button>
                </form><!-- /form -->
            </div><!-- /card-container -->
        </div>
    </div>

{% endblock %}